<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_toast">

    <TextView
        android:id="@+id/txtViewContent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_toast_content_textview_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_toast_content_textview_margin_60"
        android:layout_marginRight="@dimen/common_toast_content_textview_margin_60"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

</RelativeLayout>