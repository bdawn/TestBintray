<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="@dimen/common_toast_root_layout_wdith"
    android:layout_height="@dimen/common_toast_root_layout_height"
    android:background="@drawable/common_toast_bg" >

    <ImageView
        android:id="@+id/imgViewIcon"
        android:layout_width="@dimen/common_toast_icon_img_wdith"
        android:layout_height="@dimen/common_toast_icon_img_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_toast_icon_img_margin_top"
        android:scaleType="fitCenter"
        android:background="@drawable/common_toast_icon_info" />

    <TextView
        android:id="@+id/txtViewContent"
        android:layout_width="@dimen/common_toast_content_textview_wdith"
        android:layout_height="@dimen/common_toast_content_textview_height"
        android:layout_below="@id/imgViewIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/common_toast_content_textview_margin_60"
        android:layout_marginRight="@dimen/common_toast_content_textview_margin_60"
        android:layout_marginTop="@dimen/common_toast_content_textview_margin_60"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="14sp"/>

</RelativeLayout>